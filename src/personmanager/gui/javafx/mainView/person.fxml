<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="personmanager.gui.javafx.mainView.Controller">
   <center>
      <ListView fx:id="lstPersons" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </center>
   <bottom>
      <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#handleTeacherBtn" text="Teacher" />
            <Button mnemonicParsing="false" onAction="#handleStudentBtn" text="Student" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
